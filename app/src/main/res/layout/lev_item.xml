<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">
    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:id="@+id/text_view_medidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="1111111111"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/text_view_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/text_view_medidor"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="99_9999"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/text_view_codcatastral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_cuenta"
            android:text="05001001001"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        <TextView
            android:id="@+id/text_view_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_codcatastral"
            android:text="Nombres y Apellidos" />

        <ProgressBar
            android:id="@+id/Pgb_datmed"
            android:max="100"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_usuario"
            android:indeterminateTint="@color/colorAjustes" />



        <ProgressBar
            android:id="@+id/Pgb_datacom"
            android:max="100"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_usuario"
            android:layout_marginStart="10dp"
             android:layout_toEndOf="@+id/Pgb_datmed"
            android:indeterminateTint="@color/colorAjustes" />
        <ProgressBar
            android:id="@+id/Pgb_datacli"
            android:max="100"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_usuario"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/Pgb_datacom"
            android:indeterminateTint="@color/colorAjustes" />

        <ProgressBar
            android:id="@+id/Pgb_dataobs"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_usuario"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/Pgb_datacli"
            android:indeterminateTint="@color/colorAjustes" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>